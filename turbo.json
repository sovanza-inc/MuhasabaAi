{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^lint", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "web#build": {
      "dependsOn": ["//#lint", "^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "//#lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "dev": {
      "cache": true
    },
    "billing:sync": {
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "inputs": ["drizzle/**"],
      "persistent": true
    },
    "db:generate": {
      "inputs": ["src/**", "drizzle.config.ts"],
      "outputs": ["drizzle/**"],
      "persistent": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:check": { "cache": false },
    "db:push": { "cache": false }
  },
  "globalEnv": [
    "APP_URL",
    "DEFAULT_PLAN_ID",
    "EMAIL_FROM",
    "AUTH_SECRET",
    "RESEND_API_KEY",
    "DATABASE_URL",
    "SUPABASE_SERVICE_KEY",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "SALTEDGE_APP_ID",
    "SALTEDGE_SECRET",
    "SALTEDGE_RETURN_URL",
    "SAAS_UI_USER",
    "SAAS_UI_LICENSE_KEY",
    "DEFAULT_IS_FREE"
  ]
}
